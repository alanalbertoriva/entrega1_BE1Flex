<div class="container my-4">
    <h1 class="text-center">Lista de productos</h1>
        <section>
            <form id="filterForm" class="d-flex justify-content-center gap-3 my-4">
                <div>
                    <label for="limit">Límite de productos:</label>
                    <input type="number" id="limit" name="limit" min="1" value="{{limit}}">
                </div>
                <div>
                    <label for="page">Página:</label>
                    <input type="number" id="page" name="page" min="1" value="{{page}}">
                </div>
                <div>
                    <label for="sort">Ordenar por precio:</label>
                    <select id="sort" name="sort">
                        <option value="" {{#unless sort}}selected{{/unless}}>Ninguno</option>
                        <option value="asc">Ascendente</option>
                        <option value="desc">Descendente</option>
                    </select>
                </div>
                <div>
                    <label for="category">Categoría:</label>
                    <select id="category" name="category">
                        <option value="" {{#unless category}}selected{{/unless}}>Ninguno</option>
                        <option value="Electro">Electrónica</option>
                        <option value="Ropa">Ropa</option>
                        <option value="Hogar">Hogar</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </form>
        </section>
    {{#if payload.length}}
        <section class="d-flex gap-3 flex-wrap justify-content-center my-4">
            {{#each payload}}
                <div class="card" style="width: 18rem;">
                    <img src={{this.thumbnails.[0]}} class="card-img-top" alt={{this.title}}>
                    <div class="card-body">
                        <h2 class="">{{this.title}}</h2>
                        <p>Precio: ${{this.price}}</p>
                        <p class="card-text">{{this.description}}</p>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
                    </div>
                </div>
            {{/each}}
        </section>
        <section class="container d-flex justify-content-center my-4">
            {{#if prevLink}}
                <a href="{{prevLink}}" class="btn btn-secondary">Anterior</a>
            {{/if}}
            {{#if nextLink}}
                <a href="{{nextLink}}" class="btn btn-secondary">Siguiente</a>
            {{/if}} 
        </section>
    {{else}}
        <p>No hay productos disponibles.</p>
    {{/if}}
</div>